window.siteData = {
  "drinks": [
{% for drink in site.drinks %}  
    {
      "name"    : "{{ drink.title}}",
      "objectID": "{{drink.number}}",
      "slug": "{{drink.slug}}",
      "description": `{{drink.content}}`,
      "url": "{{ site.baseurl }}{{ drink.url }}", 
      "spirits": [
        {% for spi in drink.spirits %}
          {
            "name":  "{{spi.name | strip}}",
            "key": "{{spi.key}}", 
            "amount": "{{spi.amount}}"
          }        
        {% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      "ingredients": [
        {% for ing in drink.ingredients %}
          "{{ing | strip}}"
        {% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
], 
  "bases": [
    {% for base in site.bases %}
      {
        "name": "{{base.title}}", 
        "key": "{{base.key}}",
        "drinks": [
          {% for drink in site.drinks %}
            {% for item in drink.spirits %}
              {% if item.key == base.key %}
                {
                  "name": "{{drink.title}}", 
                  "slug": "{{drink.slug}}"
                },
              {% endif %}
            {% endfor %}
          {% endfor %} 
        ]
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ], 
  "decoctions": [
    {% for decoction in site.decoctions %}
      {
        "name": "{{decoction.title}}", 
        "objectID": "{{decoction.number}}",
        "ingredients": [
            {% for ing in decoction.ingredients %}
              "{{ing | strip}}"
            {% unless forloop.last %},{% endunless %}
            {% endfor %}
          ],
        "slug": "{{decoction.slug}}", 
        "description": `{{decoction.content}}`,
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ], 
  "substantia": [
    {% for sub in site.substantia %}
      {
        "name": "{{sub.title}}",
        "slug": "{{sub.slug}}", 
        "description": `{{sub.content}}`,
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}