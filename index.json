---
---

[
{% for drink in site.drinks %}  
    {
      "name"    : "{{ drink.title}}",
      "objectID": "{{drink.number}}",
      "url": "{{ site.baseurl }}{{ drink.url }}", 
      "spirits": [
        {% for spi in drink.spirits %}
          {
            "name": "{{spi.name | strip}}", 
            "key": "{{spi.key}}", 
            "amount": "{{spi.amount}}"
          }        
        {% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      "ingredients": [
        {% for ing in drink.ingredients %}
          "{{ing | strip}}"
        {% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]